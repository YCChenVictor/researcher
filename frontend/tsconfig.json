{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Type roots */
    "types": ["node"],

    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Emit â€“ CRA expects noEmit, build is handled by react-scripts */
    "noEmit": true
  },
  "include": [
    "src",
    "api",
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}